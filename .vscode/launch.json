{
    "configurations": [
        {
            "name": "Python: File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true,
            "cwd": "${fileDirname}"
        },
        {
            "name": "Python: Azure Functions",
            "type": "python",
            "request": "attach",
            "port": 9091,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}